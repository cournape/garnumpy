diff -Nru blas-ref.orig/Makefile blas-ref/Makefile
--- blas-ref.orig/Makefile	1970-01-01 09:00:00.000000000 +0900
+++ blas-ref/Makefile	2007-02-21 17:11:03.000000000 +0900
@@ -0,0 +1,18 @@
+#OBJS	= $(shell ls *.f | sed s/\.f/\.o/)
+SRCS	:= $(wildcard *.f)
+OBJS	:= $(patsubst %.f,%.o,$(SRCS))
+
+lib: $(LIBNAME)
+
+$(LIBNAME): obj
+	$(AR) -r $@ $(OBJS)
+	$(RANLIB) $@
+
+obj: $(OBJS)
+
+$(OBJS): %.o: %.f
+	$(FORTRAN) -c $(F77FLAGS) $<  -o $@
+
+clean:
+	rm -f $(LIBNAME)
+	rm -f $(OBJS)
